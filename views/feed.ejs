<% include ./partials/header.ejs %>
  <% include ./partials/nav.ejs %>

    <header class="text-center my-6 font-playpen">
      <h1 class="text-2xl md:text-3xl text-gray-800 font-semibold">
        Explore the world of creative images
      </h1>
    </header>

    <div class="px-6 md:px-10 lg:px-16">
      <div class="columns-1 sm:columns-2 md:columns-3 xl:columns-4 gap-4 space-y-4">
        <% posts.forEach(function(items) { %>
          <div
            class="break-inside-avoid rounded-2xl overflow-hidden bg-white shadow-md transition-transform hover:scale-[1.01]">
            <a href="/images/uploads/<%= items.image %>">
              <img src="/images/uploads/<%= items.image %>" alt="image" class="w-full block border-b border-gray-100" />
            </a>
            <div class="p-3 text-sm text-gray-800">
              <%= items.postText %>
                <div class="p-0.5 text-sm text-gray-800 cursor-pointer">@<%= items.user.username %>
                </div>

            </div>
          </div>
          <% }) %>

      </div>
    </div>

    <% include ./partials/footer.ejs %>