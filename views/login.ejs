<% include ./partials/header.ejs %>
  <div class="flex items-center justify-center min-h-screen bg-cover bg-center px-4 sm:px-6 md:px-8"
    style="background-image: url('../bg/pbg.jpg');">
    <div class="w-full max-w-md p-6 sm:p-8 rounded-3xl shadow-xl backdrop-blur-sm bg-white/10 text-center">
      <div class="w-full max-w-xs mx-auto pt-2 sm:pt-4">

        <!-- Pinterest Logo -->
        <img src="../images/pin logo.png" alt="pin logo" class="h-14 mb-4 mx-auto" />

        <!-- Header -->
        <p class="text-xl sm:text-2xl font-semibold text-white mb-5">Login to see more</p>

        <!-- Error message -->
        <% if (typeof error !=='undefined' && error.length> 0) { %>
          <p class="text-zinc-100 text-sm font-medium mb-3">
            <%= error %>
          </p>
          <% } %>

            <!-- Login Form -->
            <form action="/login" method="post" class="space-y-3">
              <input type="text" name="username" placeholder="Username" autocomplete="username"
                class="w-full px-4 py-3 text-sm border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-600 text-white" />

              <input type="password" name="password" placeholder="Password" autocomplete="current-password"
                class="w-full px-4 py-3 text-sm border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-600 text-white" />

              <input type="submit" value="Login"
                class="w-full py-3 font-bold text-white rounded-full cursor-pointer bg-red-600 hover:bg-red-700 transition" />
            </form>

            <!-- Forgot Password -->
            <a href="/forgot" class="block mt-3 text-sm text-white hover:underline">Forgot your password?</a>

            <!-- Footer -->
            <footer class="mt-6 text-xs text-white">
              <p>
                By continuing, you agree to Pinterest's
                <b class="text-gray-200">Terms of Service, Privacy policy.</b>
              </p>
              <hr class="my-3 border-gray-300" />
              <a href="/register" class="font-medium hover:underline">Not on Pinterest yet? Sign up</a>
            </footer>

      </div>
    </div>
  </div>

  <% include ./partials/footer.ejs %>